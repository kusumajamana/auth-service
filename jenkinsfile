pipeline {
	agent any	tools {
		maven 'my-maven’
		jdk 'my-jdk’
	}
	stages {
		stage('Clone'){
			steps {git url:'https://github.com/kusumajamana/auth-service.git', branch:'master’}			}
		stage('Build'){
			steps {sh "mvn clean install -DskipTests"}
		}
		stage('Pre-deploy'){
			steps{sh "docker rm -f auth-cntr"
					sh "docker rmi -f auth-img"}
		}
		stage('Deploy') {
			steps { sh "docker build -t auth-image ."
			            sh "docker run -p 8090:8090 -d --name auth-container auth-image"}
		}
	}
}